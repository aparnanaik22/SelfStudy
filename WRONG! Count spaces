#include <iostream>
#include<string.h>
using namespace std;

int main() 
{	
	char line[80];
	int count=1,len,i;
	cin.getline(line,80);
	cout<<"Enter the line of text: "<<endl;
	len=strlen(line);
	for(i=0;i<=len;i++)
	{
		if(line[i]=="  ")
		count++;
	}
	cout<<"Number of words are: "<<count+1<<endl;
	return 0;
}
