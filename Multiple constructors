#include <iostream>
using namespace std;
class ratio
{
	private:
	int num,den;
	public:
	ratio()
	{
		num=0;
		den=1;
	}
	ratio(int n)
	{
		num=n;
		den=1;
	}
	ratio(int n,int d)
	{
		num=n;
		den=d;
	}
	void print()
	{
		cout<<num<<"/"<<den<<endl;
	}
};
int main() 
{	
	cout<<"Ratio with Multiple Constructors"<<"\n";
	ratio x,y(4),z(4,7);
	cout<<"Ratio 1: ";
	x.print();
	cout<<"Ratio 2: ";
	y.print();
	cout<<"Ratio 3: ";
	z.print();
	
	return 0;
}
